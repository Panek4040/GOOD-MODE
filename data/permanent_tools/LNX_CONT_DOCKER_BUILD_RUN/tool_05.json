{
  "name": "docker_inspect_logs_container_diagnostics",
  "description": "Inspect container configuration and retrieve logs for debugging and monitoring",
  "pattern": "docker.*logs|inspect.*container|container.*diagnostics|debug.*docker",
  "parameters": [
    "container_name",
    "log_lines"
  ],
  "sequence": [
    {
      "action": {
        "type": "system_command",
        "tool": "shell",
        "operation": "run",
        "command": "docker",
        "args": [
          "ps",
          "-a",
          "--filter",
          "name={{container_name}}",
          "--format",
          "{{.ID}} {{.Status}}"
        ]
      },
      "expected_output": {
        "type": "string",
        "example": "a1b2c3d4e5f6 Up 2 hours"
      }
    },
    {
      "action": {
        "type": "system_command",
        "tool": "shell",
        "operation": "run",
        "command": "docker",
        "args": [
          "logs",
          "--tail",
          "{{log_lines}}",
          "--timestamps",
          "{{container_name}}"
        ]
      },
      "expected_output": {
        "type": "string",
        "example": "2025-11-18T14:23:45.123456789Z [INFO] Application started on port 8080\n2025-11-18T14:23:46.234567890Z [INFO] Connected to database postgres:5432\n2025-11-18T14:23:47.345678901Z [INFO] Cache warmed up successfully"
      }
    },
    {
      "action": {
        "type": "system_command",
        "tool": "shell",
        "operation": "run",
        "command": "docker",
        "args": [
          "inspect",
          "{{container_name}}",
          "--format",
          "{{json .State}}"
        ]
      },
      "expected_output": {
        "type": "string",
        "example": "{\"Status\":\"running\",\"Running\":true,\"Paused\":false,\"Restarting\":false,\"OOMKilled\":false,\"Dead\":false,\"Pid\":12345,\"ExitCode\":0,\"StartedAt\":\"2025-11-18T12:23:45.123456789Z\"}"
      }
    },
    {
      "action": {
        "type": "system_command",
        "tool": "shell",
        "operation": "run",
        "command": "docker",
        "args": [
          "stats",
          "{{container_name}}",
          "--no-stream",
          "--format",
          "table {{.Name}}\\t{{.CPUPerc}}\\t{{.MemUsage}}\\t{{.NetIO}}"
        ]
      },
      "expected_output": {
        "type": "string",
        "example": "NAME       CPU %     MEM USAGE / LIMIT     NET I/O\nmyapp      2.47%     142.5MiB / 512MiB     1.25MB / 856kB"
      }
    }
  ],
  "stats": {
