{"instruction": "Move file to trash instead of deleting", "input": {"file_path": "/tmp/old_file.txt"}, "output": {"tool": "safe_delete_to_trash", "action": "mkdir -p ~/.local/share/Trash/files && mv /tmp/old_file.txt ~/.local/share/Trash/files/old_file.txt.$(date +%Y%m%d_%H%M%S)", "result": "Moved to trash: old_file.txt.20251118_143000"}}
{"instruction": "Delete file after checking its size", "input": {"file_path": "/tmp/large.zip", "max_size_mb": "500"}, "output": {"tool": "safe_delete_with_size_check", "action": "size_mb=$(($(stat -c %s /tmp/large.zip) / 1024 / 1024)); if [ $size_mb -le 500 ]; then rm -v /tmp/large.zip; fi", "result": "Size OK: 150MB <= 500MB\nremoved '/tmp/large.zip'"}}
{"instruction": "Remove all .tmp files in directory with logging", "input": {"path": "/tmp", "pattern": "*.tmp"}, "output": {"tool": "safe_delete_batch_with_log", "action": "find /tmp -name '*.tmp' -type f -exec sh -c 'echo \"$(date) DELETE $1\" >> /tmp/delete_log.txt' _ {} \\; -delete", "result": "Log created: /tmp/delete_log_20251118_143000.txt\nDeleted 127 files"}}
{"instruction": "Delete files older than 30 days", "input": {"path": "/var/log/archived", "days_old": "30"}, "output": {"tool": "safe_delete_by_age", "action": "find /var/log/archived -type f -mtime +30 -delete -print | wc -l", "result": "45"}}
{"instruction": "Securely shred sensitive file", "input": {"file_path": "/tmp/passwords.txt"}, "output": {"tool": "safe_delete_secure_shred", "action": "shred -v -u -z /tmp/passwords.txt", "result": "shred: /tmp/passwords.txt: pass 1/1 (000000)...\nshred: /tmp/passwords.txt: removed"}}
{"instruction": "Restore file from trash", "input": {"file_pattern": "important_doc"}, "output": {"tool": "safe_delete_restore_from_trash", "action": "latest=$(find ~/.local/share/Trash/files -name '*important_doc*' | sort -r | head -1); mv \"$latest\" ./$(basename \"$latest\" | sed 's/\\.20.*$//')", "result": "Restored to: /home/user/important_doc.pdf"}}
{"instruction": "Empty trash directory", "input": {}, "output": {"tool": "safe_delete_empty_trash", "action": "rm -rf ~/.local/share/Trash/files/* && echo 'Trash emptied'", "result": "Emptied trash: 47 files, 128MB freed"}}
{"instruction": "Check file details before deletion", "input": {"file_path": "/tmp/data.db"}, "output": {"tool": "safe_delete_with_size_check", "action": "stat -c 'Path: %n\nSize: %s bytes\nModified: %y\nPermissions: %a' /tmp/data.db", "result": "Path: /tmp/data.db\nSize: 10485760 bytes\nModified: 2025-11-18 10:30:22.000000000\nPermissions: 644"}}
{"instruction": "Move multiple files to trash", "input": {"path": "/var/www/backups", "pattern": "backup_*.tar.gz"}, "output": {"tool": "safe_delete_batch_with_log", "action": "timestamp=$(date +%Y%m%d_%H%M%S); find /var/www/backups -name 'backup_*.tar.gz' -exec sh -c 'mv \"$1\" ~/.local/share/Trash/files/\"$(basename \"$1\").$timestamp\"' _ {} \\;", "result": "Files moved to trash with timestamp"}}
{"instruction": "Delete cache files older than 7 days", "input": {"path": "/tmp/cache", "days_old": "7"}, "output": {"tool": "safe_delete_by_age", "action": "find /tmp/cache -type f -mtime +7 -delete -print | wc -l", "result": "89"}}
{"instruction": "Shred file with 3 passes", "input": {"file_path": "/tmp/secret.key"}, "output": {"tool": "safe_delete_secure_shred", "action": "shred -v -n 3 /tmp/secret.key", "result": "shred: /tmp/secret.key: pass 1/3 (random)...\nshred: /tmp/secret.key: pass 2/3 (random)...\nshred: /tmp/secret.key: pass 3/3 (random)..."}}
{"instruction": "Count files in trash", "input": {}, "output": {"tool": "safe_delete_empty_trash", "action": "count=$(find ~/.local/share/Trash/files -type f | wc -l); echo \"Files in trash: $count\"", "result": "Files in trash: 47"}}
{"instruction": "Delete session files matching pattern", "input": {"path": "/tmp", "pattern": "sess_*"}, "output": {"tool": "safe_delete_batch_with_log", "action": "find /tmp -name 'sess_*' -type f | wc -l && find /tmp -name 'sess_*' -delete", "result": "Files to delete: 34\nDeleted 34 files"}}
{"instruction": "Get trash directory size", "input": {}, "output": {"tool": "safe_delete_empty_trash", "action": "du -sh ~/.local/share/Trash/files", "result": "Total size: 128MB"}}
{"instruction": "Delete file only if under size limit", "input": {"file_path": "/tmp/video.mp4", "max_size_mb": "100"}, "output": {"tool": "safe_delete_with_size_check", "action": "size_mb=$(($(stat -c %s /tmp/video.mp4) / 1024 / 1024)); if [ $size_mb -gt 100 ]; then echo 'File too large'; exit 1; fi", "result": "File too large: 450MB > 100MB"}}
{"instruction": "Find and list trash files matching pattern", "input": {"file_pattern": "backup"}, "output": {"tool": "safe_delete_restore_from_trash", "action": "find ~/.local/share/Trash/files -name '*backup*' -type f", "result": "/home/user/.local/share/Trash/files/backup.tar.gz.20251118_100000\n/home/user/.local/share/Trash/files/backup_old.zip.20251117_143022"}}
{"instruction": "Delete old log files safely", "input": {"path": "/var/log", "days_old": "90"}, "output": {"tool": "safe_delete_by_age", "action": "cutoff_date=$(date -d '90 days ago' '+%Y-%m-%d'); find /var/log -type f -mtime +90 -delete", "result": "Deleting files older than: 2025-08-19\n127 files deleted"}}
{"instruction": "Verify file before secure deletion", "input": {"file_path": "/tmp/api_keys.txt"}, "output": {"tool": "safe_delete_secure_shred", "action": "md5sum /tmp/api_keys.txt && shred -v -u /tmp/api_keys.txt", "result": "Original MD5: 5d41402abc4b2a76b9719d911017c592\nshred: /tmp/api_keys.txt: removed"}}
{"instruction": "Move to trash with timestamp", "input": {"file_path": "/home/user/old_report.pdf"}, "output": {"tool": "safe_delete_to_trash", "action": "timestamp=$(date +%Y%m%d_%H%M%S); mv /home/user/old_report.pdf ~/.local/share/Trash/files/old_report.pdf.$timestamp", "result": "Moved to trash: old_report.pdf.20251118_143022"}}
{"instruction": "Calculate total size before batch delete", "input": {"path": "/tmp/downloads", "pattern": "*.part"}, "output": {"tool": "safe_delete_batch_with_log", "action": "total_size=$(find /tmp/downloads -name '*.part' -exec stat -c %s {} \\; | awk '{sum+=$1} END {print sum/1024/1024}'); echo \"Total: ${total_size}MB\"", "result": "Files to delete: 23 (Total: 156MB)"}}
{"instruction": "List oldest files in trash", "input": {}, "output": {"tool": "safe_delete_empty_trash", "action": "find ~/.local/share/Trash/files -type f -exec stat -c '%y %n' {} \\; | sort | head -5", "result": "Oldest: 2025-10-15 10:30:22 /home/user/.local/share/Trash/files/old.txt.20251015_103022"}}
{"instruction": "Restore most recent version from trash", "input": {"file_pattern": "config.ini"}, "output": {"tool": "safe_delete_restore_from_trash", "action": "latest=$(find ~/.local/share/Trash/files -name '*config.ini*' | sort -r | head -1); cp \"$latest\" ./config.ini", "result": "Restored to: ./config.ini"}}
{"instruction": "Delete with file type verification", "input": {"file_path": "/tmp/unknown_file"}, "output": {"tool": "safe_delete_with_size_check", "action": "file -b /tmp/unknown_file && rm /tmp/unknown_file", "result": "File type: ASCII text\nremoved '/tmp/unknown_file'"}}
{"instruction": "Shred and verify hash changed", "input": {"file_path": "/tmp/sensitive.dat"}, "output": {"tool": "safe_delete_secure_shred", "action": "before=$(md5sum /tmp/sensitive.dat | awk '{print $1}'); shred -n 3 /tmp/sensitive.dat; after=$(md5sum /tmp/sensitive.dat | awk '{print $1}'); echo \"MD5 changed: $before != $after\"", "result": "Original MD5: 5d41402abc4b2a76b9719d911017c592\nShredded MD5: 8f14e45fceea167a5a36dedd4bea2543"}}
{"instruction": "Delete temp files created by specific user", "input": {"path": "/tmp", "pattern": "*"}, "output": {"tool": "safe_delete_by_age", "action": "find /tmp -type f -user $(whoami) -mtime +1 -delete -print | wc -l", "result": "42"}}
{"instruction": "List largest files in trash", "input": {}, "output": {"tool": "safe_delete_empty_trash", "action": "find ~/.local/share/Trash/files -type f -printf '%s %p\\n' | sort -rn | head -5", "result": "Largest: 47185920 /home/user/.local/share/Trash/files/video.mp4.20251115_100000"}}
{"instruction": "Create deletion audit log", "input": {"path": "/var/www/uploads", "pattern": "*.tmp"}, "output": {"tool": "safe_delete_batch_with_log", "action": "log_file=/tmp/delete_audit.log; find /var/www/uploads -name '*.tmp' -exec sh -c 'echo \"$(date) DELETE $1 $(stat -c %s $1)\" >> '$log_file' _ {} \\;", "result": "Log created: /tmp/delete_audit.log"}}
{"instruction": "Safe delete with ownership check", "input": {"file_path": "/tmp/shared.dat"}, "output": {"tool": "safe_delete_with_size_check", "action": "owner=$(stat -c %U /tmp/shared.dat); if [ \"$owner\" = \"$(whoami)\" ]; then rm /tmp/shared.dat; else echo 'Not owner'; fi", "result": "Owner: user:user\nremoved '/tmp/shared.dat'"}}
{"instruction": "Empty trash and report space freed", "input": {}, "output": {"tool": "safe_delete_empty_trash", "action": "size_before=$(du -sb ~/.local/share/Trash/files | awk '{print $1}'); rm -rf ~/.local/share/Trash/files/*; echo \"Freed: $((size_before/1024/1024))MB\"", "result": "Emptied trash: 47 files, 128MB freed"}}
{"instruction": "Delete files by extension and age", "input": {"path": "/var/log", "days_old": "60"}, "output": {"tool": "safe_delete_by_age", "action": "find /var/log -name '*.log' -type f -mtime +60 -delete -print | wc -l", "result": "34"}}
{"instruction": "Restore and verify file integrity", "input": {"file_pattern": "database.sql"}, "output": {"tool": "safe_delete_restore_from_trash", "action": "trashed=$(find ~/.local/share/Trash/files -name '*database.sql*' | head -1); cp \"$trashed\" ./database.sql && md5sum ./database.sql", "result": "Restored to: ./database.sql\n5d41402abc4b2a76b9719d911017c592 ./database.sql"}}
{"instruction": "Delete with confirmation of count", "input": {"path": "/tmp/cache", "pattern": "*.cache"}, "output": {"tool": "safe_delete_batch_with_log", "action": "count=$(find /tmp/cache -name '*.cache' | wc -l); echo \"Will delete $count files\" && find /tmp/cache -name '*.cache' -delete", "result": "Will delete 67 files\nDeleted 67 files"}}
{"instruction": "Shred multiple sensitive files", "input": {"path": "/tmp", "pattern": "*password*"}, "output": {"tool": "safe_delete_secure_shred", "action": "find /tmp -name '*password*' -type f -exec shred -u -v {} \\;", "result": "shred: /tmp/passwords.txt: removed\nshred: /tmp/old_password.dat: removed"}}
{"instruction": "Check trash before permanent deletion", "input": {}, "output": {"tool": "safe_delete_empty_trash", "action": "echo \"Trash contains:\"; ls -lh ~/.local/share/Trash/files/ | wc -l; read -p 'Empty? (y/n) ' confirm", "result": "Trash contains:\n47 files\nTotal: 128MB"}}
{"instruction": "Delete by size threshold", "input": {"path": "/tmp", "max_size_mb": "100"}, "output": {"tool": "safe_delete_batch_with_log", "action": "find /tmp -type f -size +100M -delete -print | wc -l", "result": "Deleted 12 files larger than 100MB"}}
