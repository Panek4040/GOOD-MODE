{
  "episode_id": "LNX_PROC_PS_KILL_TOP_EP03",
  "title": "Clean Up Zombie and Stuck Processes",
  "description": "Find and terminate hung processes, clean up zombies",
  "difficulty": "advanced",
  "steps": [
    {
      "step_number": 1,
      "instruction": "List all processes to find stuck ones",
      "tool": "ps_list_processes_filter",
      "parameters": {
        "user": "app",
        "sort_by": "time"
      },
      "expected_outcome": "Found process app.py running for 12 hours, stuck in D state"
    },
    {
      "step_number": 2,
      "instruction": "Find all instances of stuck app by name",
      "tool": "pgrep_find_process_by_pattern",
      "parameters": {
        "pattern": "app.py",
        "user": "app"
      },
      "expected_outcome": "3 instances found: PIDs 9012, 9013, 9014"
    },
    {
      "step_number": 3,
      "instruction": "Force kill all stuck app.py processes",
      "tool": "pkill_killall_by_name",
      "parameters": {
        "process_name": "app.py",
        "signal": "9"
      },
      "expected_outcome": "All 3 processes forcefully terminated"
    },
    {
      "step_number": 4,
      "instruction": "Verify cleanup and check for orphans",
      "tool": "ps_list_processes_filter",
      "parameters": {
        "user": "app",
        "sort_by": "ppid"
      },
      "expected_outcome": "All app.py processes gone, no zombies remain"
    },
    {
      "step_number": 5,
      "instruction": "Monitor system after cleanup",
      "tool": "top_htop_realtime_monitor",
      "parameters": {
        "sort_field": "mem",
        "delay": "1"
      },
      "expected_outcome": "Memory released, system stable"
    }
  ],
  "success_criteria": "Stuck processes killed, zombies cleaned, resources freed",
  "cleanup": "systemctl restart app.service"
}
