{
  "episode_id": "LNX_PKG_APT_YUM_DNF_EP03",
  "title": "Install Custom Software from .deb File",
  "description": "Download custom package, verify, install .deb file, manage dependencies",
  "difficulty": "intermediate",
  "steps": [
    {
      "step_number": 1,
      "instruction": "Check if package already installed",
      "tool": "apt_search_show_package_info",
      "parameters": {
        "search_term": "custom-app"
      },
      "expected_outcome": "Package not found in repositories"
    },
    {
      "step_number": 2,
      "instruction": "Inspect the .deb file before installing",
      "tool": "dpkg_rpm_package_file_management",
      "parameters": {
        "package_file": "/tmp/custom-app_1.0_amd64.deb",
        "pkg_type": "deb"
      },
      "expected_outcome": "Package info: custom-app 1.0, depends on libssl1.1, python3"
    },
    {
      "step_number": 3,
      "instruction": "Install the .deb package file",
      "tool": "dpkg_rpm_package_file_management",
      "parameters": {
        "package_file": "/tmp/custom-app_1.0_amd64.deb",
        "pkg_type": "deb"
      },
      "expected_outcome": "Package installed, dependency errors detected"
    },
    {
      "step_number": 4,
      "instruction": "Fix broken dependencies",
      "tool": "apt_install_update_packages",
      "parameters": {
        "package_name": "--fix-broken",
        "operation": "install"
      },
      "expected_outcome": "Missing dependencies installed automatically"
    },
    {
      "step_number": 5,
      "instruction": "Hold package at current version to prevent upgrades",
      "tool": "package_hold_pin_version_lock",
      "parameters": {
        "package_name": "custom-app",
        "operation": "hold"
      },
      "expected_outcome": "custom-app held at version 1.0"
    },
    {
      "step_number": 6,
      "instruction": "Verify package is held",
      "tool": "package_hold_pin_version_lock",
      "parameters": {
        "package_name": "custom-app",
        "operation": ""
      },
      "expected_outcome": "custom-app appears in held packages list"
    }
  ],
  "success_criteria": "Custom .deb installed, dependencies resolved, version locked",
  "cleanup": "Test custom-app functionality"
}
