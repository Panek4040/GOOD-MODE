{
  "topic_id": "LNX_FS_DISK_USAGE_TREE",
  "title": "Analyze user home directory usage",
  "goal": "Determine which users are consuming most space and what types of data",
  "steps": [
    {
      "thought": "Check total /home size",
      "action": {
        "type": "system_command",
        "tool": "shell",
        "operation": "run",
        "command": "du",
        "args": [
          "-sh",
          "/home"
        ]
      },
      "observation": "285G\t/home"
    },
    {
      "thought": "List users by size",
      "action": {
        "type": "system_command",
        "tool": "shell",
        "operation": "run",
        "command": "bash",
        "args": [
          "-c",
          "du -sh /home/* | sort -rh"
        ]
      },
      "observation": "156G\t/home/alice\n89G\t/home/bob\n45G\t/home/carol"
    },
    {
      "thought": "Check percentage breakdown",
      "action": {
        "type": "system_command",
        "tool": "shell",
        "operation": "run",
        "command": "bash",
        "args": [
          "-c",
          "total=$(du -sb /home | awk '{print $1}'); du -sb /home/* | awk -v t=$total '{pct=$1*100/t; printf \"%d|%.2f%%|%s\\n\", $1, pct, $2}' | sort -rn"
        ]
      },
      "observation": "167503724544|54.7%|/home/alice\n95443717734|31.2%|/home/bob\n48318382080|15.8%|/home/carol"
    }
  ],
  "success_condition": "alice uses 156GB (54.7%), bob 89GB (31.2%), carol 45GB (15.8%)"
}
